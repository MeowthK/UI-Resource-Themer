<Window x:Class="UI_Resource_Themer.LoadingDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI_Resource_Themer"
        mc:Ignorable="d"
        Title="LoadingDialog" Height="128" Width="400" WindowStyle="None" ShowInTaskbar="False" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" Topmost="True">
    <Grid x:Name="LoadingOverlay" Background="#FF191919">
        <StackPanel VerticalAlignment="Center">
            <Label HorizontalContentAlignment="Center" Content="Please wait..." FontWeight="Bold" FontSize="20" Foreground="#FFFFAE00"/>
            <ProgressBar x:Name="LoadingBar" Height="24" Margin="15,0,15,0"/>
        </StackPanel>
    </Grid>
</Window>
